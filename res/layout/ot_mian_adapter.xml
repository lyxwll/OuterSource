<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dip" >

    <ImageView
        android:id="@+id/title_icon"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:src="@drawable/image_default"
        android:contentDescription="@string/image_content"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ot_main_proiect_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/app_name"
                android:textColor="@color/common_black_word"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/left_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/ot_rmb_unit"
                android:textColor="@color/common_black_word"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ot_proiect_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_toRightOf="@id/left_1"
                android:text="@string/app_name"
                android:textColor="@color/common_red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ot_proiect_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/app_name"
                android:textColor="@color/common_grey_word"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dip"
                android:layout_toLeftOf="@id/ot_proiect_publish_time"
                android:gravity="left"
                android:text="@string/ot_publish_time"
                android:textColor="@color/common_grey_word"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>