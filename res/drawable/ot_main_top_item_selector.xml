<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 聚焦的颜色 -->
    <item android:drawable="@drawable/ot_main_top_item_pressed" android:state_focused="true"/>
    <!-- 按下的颜色 -->
    <item android:drawable="@drawable/ot_main_top_item_pressed" android:state_pressed="true"/>
    <!-- 被点击下去之后的效果 -->
    <item android:drawable="@drawable/ot_main_top_item_pressed" android:state_selected="true"/>
    <!-- 普通的颜色 -->
    <item android:drawable="@drawable/ot_main_top_item_normal" ></item>

</selector>